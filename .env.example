# Example Environment Variables
# Copy this file to .env.local and fill in the values

# ========================================
# API CONFIGURATION
# ========================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_API_TIMEOUT=30000

# ========================================
# EXTERNAL URLS
# ========================================
NEXT_PUBLIC_WEBSITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ========================================
# THIRD PARTY SERVICES
# ========================================
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_key_here

# ========================================
# AUTHENTICATION
# ========================================
NEXT_PUBLIC_AUTH_REDIRECT_URL=http://localhost:3000/login
NEXT_PUBLIC_AUTH_CALLBACK_URL=http://localhost:3000/api/auth/callback

# ========================================
# CDN & STORAGE
# ========================================
NEXT_PUBLIC_CDN_URL=http://localhost:3000
NEXT_PUBLIC_IMAGE_DOMAIN=localhost

# ========================================
# ENVIRONMENT
# ========================================
NODE_ENV=development
NEXT_PUBLIC_ENV=development

# ========================================
# CONTACT & BUSINESS INFO
# ========================================
NEXT_PUBLIC_BUSINESS_NAME=Nava Distributors
NEXT_PUBLIC_BUSINESS_EMAIL=support@navadistributor.com
NEXT_PUBLIC_BUSINESS_PHONE=+1 (847) 660-4308
NEXT_PUBLIC_BUSINESS_ADDRESS=111 S Lombard Rd Ste 2 Addison, IL 60101

# ========================================
# SECRET KEYS (Server-side only)
# Do NOT commit these values
# ========================================
API_SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
DATABASE_URL=your_database_url_here

# ========================================
# DEBUG & LOGGING
# ========================================
DEBUG=false
LOG_LEVEL=info
